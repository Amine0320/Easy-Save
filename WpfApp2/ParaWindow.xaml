        <CheckBox x:Name="jpg" Content="CheckBox" HorizontalAlignment="Left" Height="14" Margin="53,267,0,0" VerticalAlignment="Top" Width="16"/>
        <CheckBox x:Name="docx" Content="CheckBox" HorizontalAlignment="Left" Height="14" Margin="53,286,0,0" VerticalAlignment="Top" Width="16"/>
